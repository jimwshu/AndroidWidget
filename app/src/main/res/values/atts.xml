<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="title" format="string"/>
    <attr name="titleSize" format="dimension"/>
    <attr name="titleColor" format="color"/>
    <attr name="textViewBackground" format="reference|color"/>

     <declare-styleable name="CustomTextView">
         <attr name="title" />
         <attr name="titleSize"/>
         <attr name="titleColor"/>
         <attr name="textViewBackground"/>
     </declare-styleable>
    
    <attr name="xlistview_header_arrow" format="reference"/>
    <attr name="xlistview_progress" format="reference" />
    <attr name="listitem_footer" format="reference|color"/>

    <attr name="xlistview" format="reference"/>

    <declare-styleable name="XListView">
        <!-- pull down refresh enable -->
        <attr name="xlvRefreshEnable" format="boolean" />
        <!-- pull up load more enable -->
        <attr name="xlvLoadEnable" format="boolean" />
        <!-- an empty view to be -->
        <attr name="xlvHeaderPlaceHolderEnable" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="PowerImageView">
        <attr name="auto_play" format="boolean"></attr>
    </declare-styleable>


    <attr name="color_no_finger_inner_circle" format="color" />
    <attr name="color_no_finger_outer_circle" format="color" />
    <attr name="color_finger_on" format="color" />
    <attr name="color_finger_up" format="color" />
    <attr name="count" format="integer" />
    <attr name="tryTimes" format="integer" />


    <declare-styleable name="GestureLockViewGroup">
        <attr name="color_no_finger_inner_circle"></attr>
        <attr name="color_no_finger_outer_circle" />
        <attr name="color_finger_on"/>
        <attr name="color_finger_up" />
        <attr name="count" />
        <attr name="tryTimes" />
    </declare-styleable>


    <attr name="visible_table_count" format="integer"></attr>
    <declare-styleable name="ViewPagerIndicator">
        <attr name="visible_table_count"/>
    </declare-styleable>

</resources>
